<h2>Sign in</h2>

<div class="form-horizontal">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-group">
	  	<%= f.label :login, :class=>'col-sm-2 control-label' %>
	  	<div class="col-sm-10">
	  		<%= f.text_field :login, :autofocus => true, :class=>'form-control' %>
	  	</div>
	  </div>
	
	  <div class="form-group">
	  	<%= f.label :password, :class=>'col-sm-2 control-label' %>
	  	<div class="col-sm-10">
		  <%= f.password_field :password, :class=>'form-control' %>
		</div>
	  </div>
	  
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="form-group">
	    	<div class="col-sm-offset-2 col-sm-10">
	    		<div class="checkbox">
	    			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	    		</div>
	    	</div>
	    </div>
	  <% end -%>
	
	  <div class="form-group">
	  	<div class="col-sm-offset-2 col-sm-10">
	  		<%= f.submit "Sign in", :class=>'btn btn-default btn-success' %>
	  		<input type="button" class="btn btn-default" value="Cancel" onclick="location.href='/';">
	  	</div>
	  </div>
	<% end %>
</div>
<%= render "devise/shared/links" %>
