<div class="form-horizontal">
	<%= form_for(@home) do |f| %>
	  <% if @home.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= t('error.count', pluralize(@home.errors.count, "error"))%></h2>
	
	      <ul>
	      <% @home.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	  <div class="form-group">
	    <%= f.label :content, :class=>'col-sm-2 control-label' %>
	    <div class="col-sm-10">
	    	<%= f.text_area :content, :class=>'form-control', :rows=>5 %>
	    </div>
	  </div>
	  <div class="form-group">
		  <div class="actions col-sm-offset-2 col-sm-10">
		    <%= f.submit "Save", :class=>'btn btn-success' %>
		  </div>
	  </div>
	<% end %>
</div>
