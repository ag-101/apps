<%= link_to '<span class="glyphicon glyphicon-cog"></span> Admin'.html_safe, app_path(@app), :class=>'btn right btn-default' if check_role 'admin', @app.id %>

<% @home.each do |home| %>
	<%= home.content.html_safe %>
	<%= link_to '<span class="glyphicon glyphicon-pencil"></span> <span class="toggle_text">Edit page content</span>'.html_safe, edit_home_path(home), :class=>'btn btn-xs btn-warning right' if check_role('edit', @app.id)%>
<% end %>
