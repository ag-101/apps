
	<%= form_for(@app) do |f| %>
	  <% if @app.errors.any? %>
	    <div class="alert alert-danger" id="alert_message">
	      <strong><%= pluralize(@app.errors.count, "error") %> prohibited this form from being saved</strong>
	
	      <ul>
	      <% @app.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <div class="form-horizontal">	  
		  <div class="form-group">
		    <%= f.label :name, :class=>'col-sm-2 control-label' %>
		    <div class="col-sm-10">
		    	<%= f.text_field :name, :class=>'form-control', :rows=>5 %>
		    </div>
		  </div>  
		  
		
		  <div class="form-group">
		    <%= f.label :app_type, :class=>'col-sm-2 control-label' %>
		    <div class="col-sm-10">
		    	<%= f.select(:app_type, options_for_select(app_types, @app.app_type), {}, { :disabled => @app.app_type == 99 ? true : false, :class=>'form-control'}) %>
		    </div>
		  </div>    
		  
		  <div class="form-group">
		    <%= f.label :description, :class=>'col-sm-2 control-label' %>
		    <div class="col-sm-10">
		    	<%= f.text_area :description, :class=>'form-control', :rows=>5 %>
		    </div>
		  </div>
		
		  <div class="actions btn-group">
		    <%= f.submit 'Save', :class=>'btn btn-success'  %>
		    <%= link_to '<span class="glyphicon glyphicon-wrench"></span> Build forms'.html_safe, app_forms_path(@app), :class=>'btn btn-info' if @app.id and check_role 'admin', @app.id %>
		    <%= link_to '<span class="glyphicon glyphicon-ban-circle"></span> Cancel'.html_safe, @app.id ? app_path(@app.id) : apps_path, :class=>'btn btn-default' %>
		  </div>
		<% end %>
	</div>