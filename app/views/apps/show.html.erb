<% @home.each do |home| %>
	<%= home.content.html_safe %>
	<%= button_closer_link 'pencil', t('text.edit_page_content'), edit_home_path(home), 'warning btn-xs right' if check_role 'edit', @app.id %>
<% end %>






<% if check_role 'admin', @app.id %>
<br/><br/>

	<div class="panel panel-default">
		<div class="panel-heading"><h3 class="panel-title">Admin</h3></div>
		<div class="panel-body">
			<div class="alert alert-success"><strong><%= app_types.select{ |x| x[1] == @app.app_type }.first.first %></strong> application</div>
			<%= "<div class='alert alert-info'>#{@app.description}</div>".html_safe if @app.description? %>
			
			<div class="alert alert-warning">
				<input type="text" id="distribute_url" value="<%= "#{root_url}#{@app.name.parameterize}" %>">
			</div>
			
			<%= render :partial => '/partials/created_updated_details', :locals => { :item => @app } %>
			
			<%= button_icon_link 'chevron-left', t('text.applications'), apps_path %>
			
			<div class="btn-group">
				<%= button_closer_link 'play', t('text.run'), "/#{ @app.name.parameterize }", 'success' %>
				<%= button_closer_link 'pencil', t('text.edit'), edit_app_path(@app), 'warning' if check_role 'admin', @app.id %>
				<%= button_closer_link 'remove', t('text.delete'), {:action => 'destroy', :id => @app.id }, 'danger', { :method => :delete, :confirm => "#{ t('confirm.delete_app', :app_name => @app.name)}" } if check_role 'delete', @app.id %>	
			</div>
			
			<div class="btn-group">
				<%= button_closer_link 'wrench', t('text.build_form'), app_forms_path(@app) if check_role 'admin', @app.id %>	
				<%= button_closer_link 'stats', t('text.responses'), app_submissions_select_path(@app) if check_role 'admin', @app.id %>
				<%= button_closer_link 'thumbs-up', t('text.permissions'), role_path(@app) if check_role 'admin', @app.id %>
				<%= button_closer_link 'tasks', t('text.workflows'), app_workflows_path(@app) if check_role 'admin', @app.id %>
			</div>
		</div>
	</div>
<% end %>
