<div class="form-horizontal">
<%= form_for(@help) do |f| %>
  <% if @help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@help.errors.count, "error") %> prohibited this help from being saved:</h2>

      <ul>
      <% @help.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class=>'control-label col-sm-2' %>
    <div class="col-sm-10">
    	<%= f.text_field :name, :class=>'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, :class=>'control-label col-sm-2' %>
    <div class="col-sm-10">
    	<%= f.text_area :content, :class=>'form-control' %>
    </div>
  </div>

  <div class="actions btn-group">
    <%= f.submit "Save", :class=>'btn btn-success' %>
    <%= link_to 'Cancel', helps_path, :class=>'btn-default btn' %>
  </div>
<% end %>
</div>
